{
  "name": "fondbot/drivers-vk",
  "description": "VK driver for FondBot",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vladimir Yuldashev",
      "email": "vladimir@fondbot.com"
    },
    {
      "name": "Ivan Boldurev",
      "email": "iboldurev@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "fondbot/framework": "^3.0",
    "guzzlehttp/guzzle": "^6.2",
    "vkcom/vk-php-sdk": "^5.80"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.6",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "FondBot\\Drivers\\Vk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    },
    "laravel": {
      "providers": [
        "FondBot\\Drivers\\Vk\\VkServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --stop-on-failure --no-coverage",
    "cs": "php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
